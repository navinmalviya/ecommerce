<%= form_for [@pictureable, @picture] do |f| %>
  <% if @picture.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.file_field :name, class: 'btn btn-outline-primary' %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>