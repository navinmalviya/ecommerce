<h3>Add product </h3>
    <hr>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, class: 'form-control' %>
    </p>
 
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :price %><br>
      <%= form.number_field :price, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :product_category %><br>
      <%= form.select :product_category_id, options_for_select(product_category_list), {prompt: "select product category"}, {class: 'form-control'} %>
    </p>

    <p>
      <%= form.label :status %><br>
      <%= form.text_field :status, class: 'form-control' %>
    </p>

    <p>
      <b>Active?</b><br />
      <%= form.radio_button :is_active, 'Yes' %> Yes<br />
      <%= form.radio_button :is_active, 'No' %> No<br />
    </p>

    <p>
      <%= form.label :cover_image %><br>
      <%= form.file_field :cover_image, class: 'btn btn-outline-primary' %>
    </p>